@page "/playerdetails/{id}"
@inherits PlayerDetailsBase


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Player.FirstName @Player.LastName</h1>

            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@Player.PhotoPath"/>

                <h4>Number: @Player.Number</h4>
                <h4>Position: @Player.Position</h4>
                <h4>Height: @Player.Height</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="@($"editplayer/{Player.Id}")" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>


